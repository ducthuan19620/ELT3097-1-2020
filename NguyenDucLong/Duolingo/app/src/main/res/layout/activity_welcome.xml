<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#fff">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/doulingo_singing"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/doulingo_singing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/doulingo_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/doulingo_singing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/duolingo_text" />

    <TextView
        android:id="@+id/layout_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doulingo_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Học ngoại ngữ miễn phí."
        android:textColor="@color/empty_view"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/layout_subtitle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Mãi mãi."
        android:textColor="@color/empty_view"
        android:textSize="20sp" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/log_in_link"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/get_started_button"
        android:text="BẮT ĐẦU NGAY"
        android:textColor="@color/white_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/log_in_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_link_button"
        android:text="TÔI ĐÃ CÓ TÀI KHOẢN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/green_button"/>

</RelativeLayout>